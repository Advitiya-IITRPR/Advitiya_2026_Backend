generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String        @id @default(uuid()) @db.Uuid
  userName                String
  email                   String
  password                String
  mobileNo                String
  isVerified              Boolean       @default(false)
  verificationCode        String?
  verificationCodeExpiry  DateTime?
  resetPasswordCode       String?
  resetPasswordCodeExpiry DateTime?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  participation           Participant[]
}

model Event {
  id                 String        @id @default(uuid()) @db.Uuid
  eventName          String
  eventDateAndTime   DateTime
  eventFees          Float
  minSize            Int           @default(1)
  maxSize            Int           @default(1)
  participants       Participant[]
  isRegistrationOpen Boolean       @default(false)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  eventImage         String
  description        String
  webPageLink        String
  eventRuleBook      String?
}

model Participant {
  id                String   @id @default(uuid()) @db.Uuid
  TeamName          String?
  EventParticipated Event    @relation(fields: [eventId], references: [id])
  eventId           String   @db.Uuid
  participants      User[]
  feesPaid          Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
